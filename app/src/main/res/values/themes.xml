<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HangboardTimer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryVariant">#636363</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#636363</item>
        <item name="colorSecondaryVariant">#636363</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#636363</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HangboardTimer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HangboardTimer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HangboardTimer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.NumPicker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textFontWeight"><![CDATA[20]]></item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProgressBarStyle" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressTint">#a8a8a8</item>
        <item name="android:progressBackgroundTint">#232323</item>
        <item name="android:alpha">80</item>
        <item name="android:minHeight">12dp</item>
    </style>
</resources>